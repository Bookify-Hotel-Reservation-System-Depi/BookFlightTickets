@model DAL.models.Airline

@{
    ViewData["Title"] = "Delete Airline";
}

<h2 class="mb-3">Delete Airline</h2>

<h4>Are you sure you want to delete this airline?</h4>

<div class="card p-4 mt-3 shadow-sm text-black">
    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Code</dt>
        <dd class="col-sm-9">@Model.Code</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
