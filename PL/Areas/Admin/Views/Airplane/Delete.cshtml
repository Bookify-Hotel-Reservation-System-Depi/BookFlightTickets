@model DAL.models.Airplane

@{
    ViewData["Title"] = "Delete Airplane";
}

<h2>Delete Airplane</h2>

<h4>Are you sure you want to delete this airplane?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">Seat Capacity</dt>
        <dd class="col-sm-10">@Model.SeatCapacity</dd>

        <dt class="col-sm-2">Airline</dt>
        <dd class="col-sm-10">@Model.Airline?.Name</dd> 
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" /> 
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
