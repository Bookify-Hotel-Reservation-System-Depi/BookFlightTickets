@using DAL.models
@model IEnumerable<Airplane>

@{
    ViewData["Title"] = "Airplanes Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">Airplanes List</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Airplane
        </a>
    </div>

    <table class="table table-striped table-bordered align-middle text-white">
        <thead class="table-dark">
            <tr>
                <th>Model</th>
                <th>Capacity</th>
                <th>Airline</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var airplane in Model)
                {
                    <tr class="text-white">
                        <td>@airplane.Model</td>
                        <td>@airplane.SeatCapacity</td>
                        <td>@airplane.Airline?.Name</td>
                        <td>
                            @* <a asp-action="Details" asp-route-id="@airplane.Id" class="btn btn-sm btn-info text-white me-1">
                                <i class="bi bi-eye"></i> Details
                            </a> *@
                            <a asp-action="Edit" asp-route-id="@airplane.Id" class="btn btn-sm btn-warning text-white me-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            @*  <a asp-action="Delete" asp-route-id="@airplane.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>  *@
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">No airplanes available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
